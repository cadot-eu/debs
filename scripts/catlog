#!/bin/bash
for arg in "$@"; do
    if [[ "$arg" == "-h" || "$arg" == "--help" ]]; then
        echo "Display colored log file (params: none)"
        exit 0
    fi
done

# R√©cup√®re APP_ENV depuis le fichier .env
if [ -f .env.local ]; then
  APP_ENV=$(grep -E '^APP_ENV=' .env.local | cut -d '=' -f2)
fi

# Si non d√©fini via .env.local, on essaie .env
if [ -z "$APP_ENV" ]; then
  APP_ENV=$(grep -E '^APP_ENV=' .env | cut -d '=' -f2)
fi
# V√©rifie qu'on a bien trouv√© APP_ENV
if [ -z "$APP_ENV" ]; then
    echo "‚ùå Impossible de trouver APP_ENV dans .env"
    exit 1
fi

# Date du jour
DATE=$(date +"%Y-%m-%d")

# Chemin du fichier de log
LOG_FILE="var/log/${APP_ENV}-${DATE}.log"

# V√©rifie l'existence du fichier
if [ ! -f "$LOG_FILE" ]; then
    echo "‚ùå Le fichier $LOG_FILE n'existe pas."
    exit 1
fi

# Affichage avec coloration
echo "üìÑ Affichage du fichier : $LOG_FILE"
echo

# Fonctions de couleur
RED='\033[0;31m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
GRAY='\033[0;37m'
NC='\033[0m' # No Color

# Lecture ligne par ligne
while IFS= read -r line; do
    if echo "$line" | grep -qi "error"; then
        echo -e "${RED}${line}${NC}"
    elif echo "$line" | grep -qi "warning"; then
        echo -e "${YELLOW}${line}${NC}"
    elif echo "$line" | grep -qi "info"; then
        echo -e "${BLUE}${line}${NC}"
    else
        echo -e "${GRAY}${line}${NC}"
    fi
done < "$LOG_FILE"
