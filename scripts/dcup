#!/bin/bash
# Affiche l'aide si -h ou --help est présent n'importe où dans les arguments
for arg in "$@"; do
    if [[ "$arg" == "-h" || "$arg" == "--help" ]]; then
        echo ""Start Docker Compose services in detached mode, automatically detecting compose files (supports docker-compose.yml, .yaml, override.*, local.*)." Parameters: none."
        exit 0
    fi
done

set -e

# Détection de la commande docker compose
if command -v docker-compose &> /dev/null; then
    COMPOSE="docker-compose"
elif docker compose version &> /dev/null; then
    COMPOSE="docker compose"
else
    echo "Erreur : ni docker-compose ni docker compose n'est installé."
    exit 1
fi

# Fichiers à vérifier dans cet ordre
CANDIDATES=(
  "docker-compose.yml"
  "docker-compose.yaml"
  "docker-compose.override.yml"
  "docker-compose.override.yaml"
  "docker-compose.local.yml"
  "docker-compose.local.yaml"
  "compose.yml"
  "compose.yaml"
  "compose.override.yml"
  "compose.override.yaml"
  "compose.local.yml"
  "compose.local.yaml"
)

FILES=""
for FILE in "${CANDIDATES[@]}"; do
    if [[ -f "$FILE" ]]; then
        FILES="$FILES -f $FILE"
    fi
done

if [[ -z "$FILES" ]]; then
    echo "Aucun fichier de configuration Docker Compose trouvé."
    exit 1
fi

# Exécution
echo "Commande exécutée : $COMPOSE $FILES up -d"
$COMPOSE $FILES up -d
