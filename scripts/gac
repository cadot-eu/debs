#!/bin/bash
# Affiche l'aide si -h ou --help est présent n'importe où dans les arguments
for arg in "$@"; do
    if [[ "$arg" == "-h" || "$arg" == "--help" ]]; then
        echo "\"Usage: $0 <file> <message> - Stage and commit a file with the given message.\" [options: -h, --help]"
        exit 0
    fi
done
# Affiche l'aide si -h ou --help est présent n'importe où dans les arguments
for arg in "$@"; do
    if [[ "$arg" == "-h" || "$arg" == "--help" ]]; then
        echo ""Usage: $0 <file> <message> - Stage and commit a file with the given message.""
        exit 0
    fi
done
git add "$1"
git commit -m "$2"
