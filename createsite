if [ $# -lt 3 ]; 
  then
    echo "----------Clonage de base"
    git clone git@github.com:cadot-eu/newbase.git $1
    cd "$1"
    gitSubmodulesUpdate
    gitSubmodulesInit
    mkdir var -p
    mkdir public -p
    mkdir public/build -p
    mkdir public/media -p
    mkdir pubic/uploads -p
    mkdir migrations -p
    sudo chown www-data: var -R
    sudo chown www-data: public -R
    runsite
    docker exec -it "$1" composer install
    docker exec -it "$1" yarn install
    docker exec -it "$1" ./bin/console d:s:c 
    docker exec -it "$1" ./bin/console d:f:l -n 
    docker exec -it "$1" yarn build
    gitSubmodulesOnMain
    git remote set-url origin "$2"
    echo "Envoie du site sur votre git"
    git add .
    git commit -m "start"
    git push
    runsite
    echo "le site a été envoyé sur votre git"
    echo "tu peux ajouter crudmick en allant dans src/Command et en faisant git clone git@github.com:cadot-eu/crudmick.git"
  else
   echo "vous devez donner le répertoire de destination  et l'adresse du git (private)  de destination"
fi
