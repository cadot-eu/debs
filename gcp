#!/bin/bash
#test option force is set
force=0
if [ "$1" == "-f" ] && [ "$1" == "--force" ] && [ "$2" == "-f" ] && [ "$2" == "--force" ]; then
    force=1
    echo'ok'
fi
echo $force
if [[ `git status --porcelain` ]]  ; then
    # test si runtests est pr√©sent
    if [ -f runtests.sh ]; then
        ./runtests
    fi
  
    git add .
    git commit -m "$1"
    git submodule foreach "git add . && gcp '$1'"
    git add .
    git commit -m "$1"
    git push
    git push --tags
else
    echo "no modifs ;-)"
fi
