#!/bin/bash
#test option force is set



if [[ `git status --porcelain` ]] && [ "$1" == "-f" ]; then
    # test si runtests est pr√©sent
    if [ -f runtests.sh ]; then
        ./runtests
    fi
  
    git add .
    git commit -m "$1"
    git submodule foreach "git add . && gcp '$1'"
    git add .
    git commit -m "$1"
    git push
    git push --tags
else
    echo "no modifs ;-)"
fi
