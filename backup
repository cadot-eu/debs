result=${PWD##*/}


if [ -f .env ]; then
    export $(grep -v '^#' .env | xargs)
fi
base=('./node_modules/' './vendor/'  './var/'  './.git'  './public/'  './backup' './docker-compose.yml')
exclude=$(printf " --exclude %s" "${base[@]}")
exclude=${exclude:1}
if  [ -n "$BACKUP_URL" ]; then
    if [ -z $BACKUP_URL ]; then
        echo "no parameters "
    else
        case "$1" in
            full )
            duplicity --no-encryption full . $BACKUP_URL --exclude './docker-compose.yml' --exclude './node_modules/' --exclude './vendor/' --exclude './var/' --exclude './.git' --exclude './public/' ;;
            local )
            duplicity --no-encryption full . file:///agarder/duplicity/$result/ --exclude './docker-compose.yml' --exclude './node_modules/' --exclude './vendor/' --exclude './var/' --exclude './.git' --exclude './public/' ;;
            * )
            duplicity --no-encryption incr . $BACKUP_URL --exclude './docker-compose.yml' --exclude './node_modules/' --exclude './vendor/' --exclude './var/' --exclude './.git' --exclude './public/' ;;
        esac
        
    fi
    
    #duplicity incr . $BACKUP_URL --exclude './node_modules/' --exclude './vendor/' --exclude './var/' --exclude './.git' --exclude './public/' --exclude './backup' --no-encryption --dry-run
    
else
    echo "parameters empty in .env, get BACKUP_URL"
fi

